{
  "name": "garage_management_software",
  "productName": "Garage Management Software",
  "version": "1.0.1",
  "description": "Garage Management Software built with Electron and React",
  "main": ".webpack/main",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\""
  },
  "author": {
    "name": "Bryan Peter Johnson",
    "email": "jh@hotmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@electron-forge/cli": "^7.8.3",
    "@electron-forge/maker-deb": "^7.8.3",
    "@electron-forge/maker-rpm": "^7.8.3",
    "@electron-forge/maker-squirrel": "^7.8.3",
    "@electron-forge/maker-zip": "^7.8.3",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.3",
    "@electron-forge/plugin-fuses": "^7.8.3",
    "@electron-forge/plugin-webpack": "^7.8.3",
    "@electron/fuses": "^1.8.0",
    "@vercel/webpack-asset-relocator-loader": "^1.7.3",
    "autoprefixer": "^10.4.21",
    "babel-loader": "^10.0.0",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^6.11.0",
    "dotenv": "^17.2.2",
    "electron": "^38.2.1",
    "node-loader": "^2.1.0",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.1.1",
    "react-scripts": "^5.0.1",
    "style-loader": "^3.3.4",
    "webpack-dev-server": "^5.2.2"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.7",
    "@heroicons/react": "^2.2.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@tailwindcss/postcss": "^4.1.11",
    "antd": "^5.27.1",
    "axios": "^1.11.0",
    "buffer": "^6.0.3",
    "chart.js": "^4.5.0",
    "chartjs-plugin-datalabels": "^2.2.0",
    "class-variance-authority": "^0.7.1",
    "electron-squirrel-startup": "^1.0.1",
    "events": "^3.3.0",
    "file-saver": "^2.0.5",
    "framer-motion": "^12.23.22",
    "lodash": "^4.17.21",
    "lucide-react": "^0.542.0",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "react": "^19.1.1",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^19.1.1",
    "react-hot-toast": "^2.6.0",
    "react-icons": "^5.5.0",
    "react-modal": "^3.16.3",
    "react-router-dom": "^7.8.0",
    "react-select": "^5.10.2",
    "react-to-print": "^3.1.1",
    "react-toastify": "^11.0.5",
    "recharts": "^3.2.1",
    "socket.io-client": "^4.8.1",
    "stream-browserify": "^3.0.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.17",
    "util": "^0.12.5"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "asar": true,
        "icon": "./src/assets/icon"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "garage_management_software",
            "setupExe": "Garage_Management_Software_Setup.exe",
            "setupIcon": "./src/assets/icon.ico",
            "shortcutName": "Garage Management Software",
            "noMsi": true,
            "iconUrl": "https://raw.githubusercontent.com/mmautotech/gms_backend/main/src/assets/icon.ico"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "win32",
            "darwin",
            "linux"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "plugins": [
        {
          "name": "@electron-forge/plugin-webpack",
          "config": {
            "mainConfig": "./webpack.main.config.js",
            "renderer": {
              "config": "./webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./src/index.html",
                  "js": "./src/renderer.js",
                  "name": "main_window"
                }
              ]
            }
          }
        },
        {
          "name": "@electron-forge/plugin-auto-unpack-natives",
          "config": {}
        }
      ]
    }
  }
}
